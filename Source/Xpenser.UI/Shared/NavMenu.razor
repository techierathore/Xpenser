<Sidebar>
    <SidebarContent>
        <SidebarNavigation>
            <SidebarItem>
                <SidebarLink To="/" Title="Show dashboard">
                    <Icon Name="IconName.Dashboard" Margin="Margin.Is3.FromRight" />Dashboard
                </SidebarLink>
            </SidebarItem>
            <SidebarItem>
                <SidebarLink Toggled="(isOpen) => MasterSubItems.Toggle(isOpen)">
                    Master Data
                </SidebarLink>
                <SidebarSubItem @ref="MasterSubItems">
                    <SidebarItem>
                        <SidebarLink To="counter">Employees</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="counter">Receipts</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="CreditCardList">Credit Cards</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="PropertyList">Property Serviced</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="PropContactsList">Property Contacts</SidebarLink>
                    </SidebarItem>
                </SidebarSubItem>
            </SidebarItem>
            <SidebarItem>
                <SidebarLink Toggled="(isOpen) => JobsSubItems.Toggle(isOpen)">
                    Jobs Management
                </SidebarLink>
                <SidebarSubItem @ref="JobsSubItems">
                    <SidebarItem>
                        <SidebarLink To="WorkOrderList">Work Orders</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="EstimatesDash">Estimates</SidebarLink>
                    </SidebarItem>
                </SidebarSubItem>
            </SidebarItem>
            <SidebarItem>
                <SidebarLink class="navigation-header" Toggled="(isOpen) => TimeAppSubItems.Toggle(isOpen)">
                    Time App
                </SidebarLink>
                <SidebarSubItem @ref="TimeAppSubItems">
                    <SidebarItem>
                        <SidebarLink To="ClockIn">Clock Me In</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="BulkTime">Bulk Time</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="TimeApprovals">Time Approvals</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="TimeCards">Time Cards</SidebarLink>
                    </SidebarItem>
                </SidebarSubItem>
            </SidebarItem>
            <SidebarItem>
                <SidebarLink Toggled="(isOpen) => AdminSubItems.Toggle(isOpen)">
                    Admin
                </SidebarLink>
                <SidebarSubItem @ref="AdminSubItems">
                    <SidebarItem>
                        <SidebarLink To="OrgList">Organizations</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="UserList">Users</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="OrgGenStaticList">Generic Static List</SidebarLink>
                    </SidebarItem>
                </SidebarSubItem>
            </SidebarItem>
        </SidebarNavigation>
    </SidebarContent>
</Sidebar>

@code{
    SidebarSubItem MasterSubItems;
    SidebarSubItem JobsSubItems;
    SidebarSubItem TimeAppSubItems;
    SidebarSubItem AdminSubItems;
}