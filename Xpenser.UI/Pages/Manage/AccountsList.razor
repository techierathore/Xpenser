@page "/AccList"
<ConentPanel PanelTitle="Accounts List">
    <RightSesction>
        <NavLink class="btn btn-primary" href="ManageAccount">
            <span class="oi oi-plus" aria-hidden="true"></span>
            Add New
        </NavLink>
    </RightSesction>
    <PanelContent>
        @if (ObjectList == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <DataGrid TItem="Account" Data="@ObjectList" @bind-SelectedRow="@SelObject" 
                      Sortable="true" Filterable="false" ShowPager="false"  PageSize="15"
                      UseInternalEditing="false" Editable="false" Striped="false" 
                      Bordered="true" Hoverable="true" Responsive="true">
                <DataGridColumns>
                    <DataGridColumn TItem="Account" Field="@nameof(Account.AcNumber)" Caption="Account No" />
                    <DataGridColumn TItem="Account" Field="@nameof(Account.AcccountName)" Caption="Name" />
                    <DataGridColumn TItem="Account" Field="@nameof(Account.AcType)" Caption="Type" />
                    <DataGridColumn TItem="Account" Field="@nameof(Account.OpenBal)" Caption="Opening Balance" />
                    <DataGridDateColumn TItem="Account" Field="@nameof( Account.StartDate )" DisplayFormat="{0:MM/dd/yyyy}" Caption="Start Date" />
                    <DataGridColumn TItem="Account" Field="@nameof(Account.AccountId)">
                        <DisplayTemplate>
                            <a class="btn btn-secondary table-btn"
                               href="/ManageAccount/@context.AccountId">
                                <i class="material-icons">create</i>
                            </a>
                        </DisplayTemplate>
                    </DataGridColumn>
                </DataGridColumns>
            </DataGrid>
        }
    </PanelContent>
</ConentPanel>
